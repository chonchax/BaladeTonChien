<form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
  <div class="search-form-control form-group ">
    <input class="form-control string required" type="text" name="query" id="search_query" placeholder="Rechercher une balade" value="<%= params[:query] %>" />
    <button type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i>
    </button>
  </div>
</form>
